$C = "../Common.ui";

Group #ArenaDetailPage {
    $C.@PageOverlay {}

    $C.@DecoratedContainer {
        @CloseButton = true;
        Anchor: (Width: 560, Height: 420);

        Group #Title {
            $C.@Title #ArenaTitle {
                @Text = "Arena Name";
                Anchor: (Top: 12, Height: 24);
            }
        }

        Group #Content {
            Padding: (Full: 20);
            Anchor: (Top: 35);
            LayoutMode: Top;

            // Arena Description (subtitle)
            Label #ArenaDescription {
                Text: "Duel | 2 Players";
                Anchor: (Height: 22);
                Style: (FontSize: 14, TextColor: #96a9be, Alignment: Center);
            }

            $C.@ContentSeparator {
                @Anchor = (Top: 10);
            }

            // Info Panel - two column grid with background
            Group #InfoPanel {
                Anchor: (Top: 12);
                Padding: (Full: 14);
                Background: #141c26;
                LayoutMode: Top;

                // Top row: Game Mode + Status
                Group #TopInfoRow {
                    Anchor: (Height: 26);
                    LayoutMode: Left;

                    // Game Mode
                    Label {
                        Text: "Game Mode";
                        Anchor: (Width: 90);
                        Style: (FontSize: 12, TextColor: #6b7d8e, VerticalAlignment: Center);
                    }
                    Label #GameModeValue {
                        Text: "Duel";
                        Anchor: (Width: 120);
                        Style: (FontSize: 13, TextColor: #b7cedd, VerticalAlignment: Center, RenderBold: true);
                    }

                    // Spacer
                    Group { FlexWeight: 1; }

                    // Status
                    Label {
                        Text: "Status";
                        Anchor: (Width: 55);
                        Style: (FontSize: 12, TextColor: #6b7d8e, VerticalAlignment: Center);
                    }
                    Label #StatusValue {
                        Text: "Available";
                        Anchor: (Width: 90);
                        Style: (FontSize: 13, TextColor: #2ecc71, VerticalAlignment: Center, Alignment: End, RenderBold: true);
                    }
                }

                // Bottom row: Players + Queue
                Group #BottomInfoRow {
                    Anchor: (Height: 26, Top: 4);
                    LayoutMode: Left;

                    // Players
                    Label {
                        Text: "Players";
                        Anchor: (Width: 90);
                        Style: (FontSize: 12, TextColor: #6b7d8e, VerticalAlignment: Center);
                    }
                    Label #PlayersValue {
                        Text: "2-2";
                        Anchor: (Width: 120);
                        Style: (FontSize: 13, TextColor: #b7cedd, VerticalAlignment: Center, RenderBold: true);
                    }

                    // Spacer
                    Group { FlexWeight: 1; }

                    // In Queue
                    Label {
                        Text: "In Queue";
                        Anchor: (Width: 55);
                        Style: (FontSize: 12, TextColor: #6b7d8e, VerticalAlignment: Center);
                    }
                    Label #QueueValue {
                        Text: "0";
                        Anchor: (Width: 90);
                        Style: (FontSize: 13, TextColor: #3498db, VerticalAlignment: Center, Alignment: End, RenderBold: true);
                    }
                }
            }

            $C.@ContentSeparator {
                @Anchor = (Top: 12);
            }

            // Kit Selection Panel
            Group #KitPanel {
                Anchor: (Top: 12);
                Padding: (Full: 14);
                Background: #141c26;
                LayoutMode: Top;

                // Kit header label
                Label {
                    Text: "KIT";
                    Anchor: (Height: 16);
                    Style: (FontSize: 10, TextColor: #6b7d8e, RenderBold: true, RenderUppercase: true);
                }

                // Kit row: name + button
                Group #KitRow {
                    Anchor: (Height: 44, Top: 4);
                    LayoutMode: Left;

                    Label #SelectedKitLabel {
                        Text: "Kit: None selected";
                        FlexWeight: 1;
                        Style: (FontSize: 15, TextColor: #e8c872, VerticalAlignment: Center, RenderBold: true);
                    }

                    $C.@SecondaryTextButton #SelectKitButton {
                        @Text = "Change";
                        @Anchor = (Width: 160);
                    }
                }
            }

            // Error/Status Message
            Label #StatusMessage {
                Text: "";
                Anchor: (Height: 20, Top: 12);
                Visible: false;
                Style: (FontSize: 12, TextColor: #e74c3c, Alignment: Center);
            }
        }

        // Bottom Button Row (pinned)
        Group #ButtonRow {
            Anchor: (Bottom: 16, Height: 44, Left: 20, Right: 20);
            LayoutMode: Left;

            $C.@SecondaryTextButton #BackButton {
                @Text = "Back";
                @Anchor = (Width: 120);
            }

            // Spacer
            Group {
                FlexWeight: 1;
            }

            $C.@TextButton #JoinQueueButton {
                @Text = "Join Queue";
                @Anchor = (Width: 160);
            }
        }
    }
}
