$C = "../Common.ui";

Group #ShopCardPair {
    Anchor: (Height: 168, Top: 8);
    LayoutMode: Left;

    // ======== Card 0 (always visible) ========
    Group #Card0 {
        Anchor: (Width: 230, Height: 162);
        Background: #141c26;
        LayoutMode: Top;

        // Colored accent stripe at top
        Group #Card0Accent {
            Anchor: (Height: 3);
            Background: #3d4f63;
        }

        // Card body
        Group #Card0Body {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Horizontal: 14, Top: 10, Bottom: 8);

            // Item name
            Label #Card0Name {
                Anchor: (Height: 24);
                Style: (FontSize: 16, TextColor: #e0e8f0, RenderBold: true);
            }

            // Description
            Label #Card0Desc {
                Anchor: (Height: 32, Top: 2);
                Style: (FontSize: 11, TextColor: #6b7d8e, Wrap: true);
            }

            // Spacer
            Group { FlexWeight: 1; }

            // Separator
            Group { Anchor: (Height: 1); Background: #2b3542; }

            // Bottom action row: cost left, button right
            Group #Card0ActionRow {
                Anchor: (Height: 32, Top: 6);
                LayoutMode: Left;

                Label #Card0Cost {
                    FlexWeight: 1;
                    Style: (FontSize: 14, TextColor: #f1c40f, RenderBold: true, VerticalAlignment: Center);
                }

                // Owned badge (hidden by default)
                Label #Card0OwnedBadge {
                    Visible: false;
                    FlexWeight: 1;
                    Style: (FontSize: 13, TextColor: #2ecc71, RenderBold: true, RenderUppercase: true, VerticalAlignment: Center, HorizontalAlignment: End);
                }

                $C.@SmallSecondaryTextButton #Card0BuyBtn {
                    @Text = "Buy";
                    @Anchor = (Width: 80, Height: 28);
                }
            }
        }
    }

    // ======== Card 1 (hidden by default) ========
    Group #Card1 {
        Anchor: (Width: 230, Height: 162, Left: 10);
        Background: #141c26;
        LayoutMode: Top;
        Visible: false;

        // Colored accent stripe at top
        Group #Card1Accent {
            Anchor: (Height: 3);
            Background: #3d4f63;
        }

        // Card body
        Group #Card1Body {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Horizontal: 14, Top: 10, Bottom: 8);

            // Item name
            Label #Card1Name {
                Anchor: (Height: 24);
                Style: (FontSize: 16, TextColor: #e0e8f0, RenderBold: true);
            }

            // Description
            Label #Card1Desc {
                Anchor: (Height: 32, Top: 2);
                Style: (FontSize: 11, TextColor: #6b7d8e, Wrap: true);
            }

            // Spacer
            Group { FlexWeight: 1; }

            // Separator
            Group { Anchor: (Height: 1); Background: #2b3542; }

            // Bottom action row: cost left, button right
            Group #Card1ActionRow {
                Anchor: (Height: 32, Top: 6);
                LayoutMode: Left;

                Label #Card1Cost {
                    FlexWeight: 1;
                    Style: (FontSize: 14, TextColor: #f1c40f, RenderBold: true, VerticalAlignment: Center);
                }

                // Owned badge (hidden by default)
                Label #Card1OwnedBadge {
                    Visible: false;
                    FlexWeight: 1;
                    Style: (FontSize: 13, TextColor: #2ecc71, RenderBold: true, RenderUppercase: true, VerticalAlignment: Center, HorizontalAlignment: End);
                }

                $C.@SmallSecondaryTextButton #Card1BuyBtn {
                    @Text = "Buy";
                    @Anchor = (Width: 80, Height: 28);
                }
            }
        }
    }
}
