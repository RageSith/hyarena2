$C = "../Common.ui";

Group #ArenaMenuPage {
    $C.@PageOverlay {}

    $C.@DecoratedContainer {
        @CloseButton = true;
        Anchor: (Width: 700, Height: 560);

        Group #Title {
            $C.@Title #TitleLabel {
                @Text = "Arena Selection";
                Anchor: (Top: 12, Height: 24);
            }
        }

        Group #Content {
            Padding: (Full: 20);
            Anchor: (Top: 35, Bottom: 70);
            LayoutMode: Left;

            // Left Column - Game Mode List
            Group #LeftColumn {
                Anchor: (Width: 200);
                LayoutMode: Top;

                Label #GameModeHeader {
                    Text: "Game Modes";
                    Anchor: (Height: 24);
                    Style: (FontSize: 16, TextColor: #e8c872, RenderBold: true);
                }

                Group #GameModeList {
                    Anchor: (Top: 6);
                    FlexWeight: 1;
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                }
            }

            // Vertical separator
            $C.@VerticalSeparator {
                Anchor: (Left: 12, Right: 12);
            }

            // Right Column - Arena List
            Group #RightColumn {
                FlexWeight: 1;
                LayoutMode: Top;

                // Header showing selected mode name
                Label #SelectedModeName {
                    Text: "All Arenas";
                    Anchor: (Height: 24);
                    Style: (FontSize: 16, TextColor: #e8c872, RenderBold: true);
                }

                // No arenas notice (hidden by default)
                Label #NoArenasNotice {
                    Text: "No arenas available for this game mode.";
                    Anchor: (Height: 30, Top: 20);
                    Visible: false;
                    Style: (FontSize: 14, TextColor: #96a9be, Alignment: Center);
                }

                // Arena card list
                Group #ArenaList {
                    Anchor: (Top: 8);
                    FlexWeight: 1;
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                }
            }
        }

        // Bottom Button Row (pinned)
        Group #ButtonRow {
            Anchor: (Bottom: 16, Height: 44, Left: 20, Right: 20);
            LayoutMode: Left;

            Group {
                FlexWeight: 1;
            }

            $C.@SecondaryTextButton #BackButton {
                @Text = "Back";
                @Anchor = (Width: 120);
            }

            Group {
                FlexWeight: 1;
            }
        }
    }
}
