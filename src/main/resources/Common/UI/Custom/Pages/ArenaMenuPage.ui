$C = "../Common.ui";

Group #ArenaMenuPage {
    $C.@PageOverlay {}

    $C.@DecoratedContainer {
        @CloseButton = true;
        Anchor: (Width: 600, Height: 580);

        Group #Title {
            $C.@Title #TitleLabel {
                @Text = "Arena Selection";
                Anchor: (Top: 12, Height: 24);
            }
        }

        Group #Content {
            Padding: (Full: 20);
            Anchor: (Top: 35);
            LayoutMode: Top;

            // Welcome Section
            Group #WelcomeSection {
                Anchor: (Height: 70);
                LayoutMode: Top;

                Label #WelcomeTitle {
                    Text: "Choose Your Battle";
                    Anchor: (Height: 32);
                    Style: (FontSize: 22, TextColor: #e8c872, Alignment: Center, RenderBold: true);
                }

                Label #WelcomeSubtitle {
                    Text: "Select an arena to view details and join the queue";
                    Anchor: (Height: 22, Top: 4);
                    Style: (FontSize: 14, TextColor: #96a9be, Alignment: Center);
                }
            }

            $C.@ContentSeparator {
                @Anchor = (Top: 10, Bottom: 10);
            }

            // No Arenas Notice
            Label #NoArenasNotice {
                Text: "There are currently no arenas available.";
                Anchor: (Height: 30);
                Visible: false;
                Style: (FontSize: 16, TextColor: #96a9be, Alignment: Center);
            }

            // Arena List
            Group #ArenaList {
                Anchor: (Top: 10);
                FlexWeight: 1;
                LayoutMode: TopScrolling;
                ScrollbarStyle: $C.@DefaultScrollbarStyle;

                // Arena Button 0
                Button #ArenaButton0 {
                    Anchor: (Height: 80);
                    Visible: false;
                    Style: $C.@SecondaryButtonStyle;
                    Padding: (Horizontal: 15, Vertical: 8);

                    Group {
                        LayoutMode: Top;
                        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);

                        // Title Row with name and status tag
                        Group #TitleRow0 {
                            Anchor: (Height: 24);
                            LayoutMode: Left;

                            Label #ArenaName0 {
                                Text: "Arena Name";
                                Anchor: (Height: 24);
                                FlexWeight: 1;
                                Style: (FontSize: 17, TextColor: #b7cedd, RenderBold: true, VerticalAlignment: Center);
                            }

                            Label #StatusTag0 {
                                Text: "AVAILABLE";
                                Anchor: (Width: 80, Height: 20);
                                Visible: true;
                                Style: (FontSize: 10, TextColor: #2ecc71, Alignment: Center, VerticalAlignment: Center, RenderBold: true, RenderUppercase: true);
                            }
                        }

                        // Gamemode Row
                        Label #GameMode0 {
                            Text: "Duel | 2 Players";
                            Anchor: (Height: 18, Top: 2);
                            Style: (FontSize: 11, TextColor: #96a9be, VerticalAlignment: Center);
                        }

                        // Stats Row
                        Group #StatsRow0 {
                            Anchor: (Height: 20, Top: 4);
                            LayoutMode: Left;

                            Label #InQueue0 {
                                Text: "In Queue: 0";
                                Anchor: (Width: 90, Height: 20);
                                Style: (FontSize: 12, TextColor: #3498db, VerticalAlignment: Center, RenderBold: true);
                            }

                            Label #InGame0 {
                                Text: "In Game: 0";
                                Anchor: (Width: 90, Height: 20, Left: 10);
                                Style: (FontSize: 12, TextColor: #2ecc71, VerticalAlignment: Center, RenderBold: true);
                            }
