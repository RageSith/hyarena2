$C = "../Common.ui";

Group #MatchHud {
    Anchor: (Width: 260, Height: 320, Top: 10, Right: 10);

    // Background panel
    $C.@Panel {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        Padding: (Full: 12);
        LayoutMode: Top;

        // Arena Name Header
        Label #ArenaName {
            Text: "Arena";
            Anchor: (Height: 24, Top: 0);
            Style: (FontSize: 16, TextColor: #e8c872, Alignment: Center, RenderBold: true);
        }

        // Game Mode
        Label #GameMode {
            Text: "Duel";
            Anchor: (Height: 16);
            Style: (FontSize: 11, TextColor: #96a9be, Alignment: Center, RenderUppercase: true);
        }

        // Timer Display
        Label #MatchTime {
            Text: "0:00";
            Anchor: (Height: 28, Top: 4);
            Style: (FontSize: 22, TextColor: #f1c40f, Alignment: Center, RenderBold: true);
        }

        // Score info bar (KOTH etc. â€” hidden by default)
        Group #ScoreInfo {
            Anchor: (Height: 36, Top: 6);
            Visible: false;
            LayoutMode: Top;

            Group #ScoreRow {
                Anchor: (Height: 18);
                LayoutMode: Left;

                Label {
                    Text: "You:";
                    Anchor: (Width: 30);
                    Style: (FontSize: 11, TextColor: #96a9be);
                }
                Label #MyScore {
                    Text: "0";
                    Anchor: (Width: 50);
                    Style: (FontSize: 12, TextColor: #2ecc71, RenderBold: true);
                }

                Group { FlexWeight: 1; }

                Label {
                    Text: "Best:";
                    Anchor: (Width: 32);
                    Style: (FontSize: 11, TextColor: #96a9be);
                }
                Label #BestScore {
                    Text: "0";
                    Anchor: (Width: 50);
                    Style: (FontSize: 12, TextColor: #f1c40f, RenderBold: true);
                }
            }

            Label #ScoreTarget {
                Text: "";
                Anchor: (Height: 14, Top: 2);
                Style: (FontSize: 10, TextColor: #6b7d8e, Alignment: Center);
            }
        }

        $C.@ContentSeparator {
            @Anchor = (Top: 8);
        }

        // Scoreboard Section
        Group #ScoreboardSection {
            Anchor: (Top: 8);
            FlexWeight: 1;
            LayoutMode: Top;

            // Table Header (with right padding to account for scrollbar)
            Group #TableHeader {
                Anchor: (Height: 20);
                Padding: (Right: 12);
                LayoutMode: Left;

                Label {
                    Text: "Player";
                    FlexWeight: 3;
                    Style: (FontSize: 10, TextColor: #96a9be, RenderUppercase: true, RenderBold: true);
                }
                Label {
                    Text: "K";
                    Anchor: (Width: 28);
                    Style: (FontSize: 10, TextColor: #96a9be, RenderUppercase: true, RenderBold: true, Alignment: Center);
                }
                Label {
                    Text: "D";
                    Anchor: (Width: 28);
                    Style: (FontSize: 10, TextColor: #96a9be, RenderUppercase: true, RenderBold: true, Alignment: Center);
                }
            }

