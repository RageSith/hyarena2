<nav class="navbar{% if active_page is not defined or active_page != 'home' %} scrolled{% endif %}" id="navbar">
    <div class="nav-container">
        <a href="/" class="nav-logo">
            <span class="logo-hy">Hy</span><span class="logo-arena">Arena</span>
        </a>
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <ul class="nav-menu" id="nav-menu">
            <li><a href="/" class="nav-link{% if active_page is defined and active_page == 'home' %} active{% endif %}">Home</a></li>
            <li><a href="/news" class="nav-link{% if active_page is defined and active_page == 'news' %} active{% endif %}">News</a></li>
            <li><a href="/live" class="nav-link nav-live{% if active_page is defined and active_page == 'live' %} active{% endif %}"><span class="live-dot"></span>Live</a></li>
            <li class="nav-dropdown">
                <button class="nav-link nav-dropdown-toggle{% if active_page is defined and active_page in ['arenas', 'kits', 'team', 'features'] %} active{% endif %}" aria-expanded="false">Game</button>
                <ul class="nav-dropdown-menu">
                    <li><a href="/arenas" class="nav-link{% if active_page is defined and active_page == 'arenas' %} active{% endif %}">Arenas</a></li>
                    <li><a href="/kits" class="nav-link{% if active_page is defined and active_page == 'kits' %} active{% endif %}">Kits</a></li>
                    <li><a href="/team" class="nav-link{% if active_page is defined and active_page == 'team' %} active{% endif %}">Team</a></li>
                    <li><a href="/features" class="nav-link{% if active_page is defined and active_page == 'features' %} active{% endif %}">Features</a></li>
                </ul>
            </li>
            <li class="nav-dropdown">
                <button class="nav-link nav-dropdown-toggle{% if active_page is defined and active_page in ['leaderboard', 'seasons', 'season_detail'] %} active{% endif %}" aria-expanded="false">Leaderboards</button>
                <ul class="nav-dropdown-menu">
                    <li><a href="/leaderboard" class="nav-link nav-ranking"><span class="ranking-icon"></span>Global</a></li>
                    {% if nav_seasons is defined and nav_seasons|length > 0 %}
                        {% for season in nav_seasons %}
                            <li><a href="/seasons/{{ season.slug }}" class="nav-link nav-seasons{% if season.visibility != 'public' %} nav-seasons-private{% endif %}{% if active_page is defined and active_page == 'season_detail' and active_season_slug is defined and active_season_slug == season.slug %} active{% endif %}"><span class="seasons-icon"></span>{{ season.name }}{% if season.visibility != 'public' %} <span class="nav-badge nav-badge-private">Private</span>{% endif %}</a></li>
                        {% endfor %}
                    {% endif %}
                    <li><a href="/seasons" class="nav-link{% if active_page is defined and active_page == 'seasons' %} active{% endif %}">All Seasons</a></li>
                </ul>
            </li>
            <li><a href="https://discord.gg/BTUBnHhHxA" target="_blank" rel="noopener" class="nav-link nav-cta">Discord</a></li>
            {% if player_session is defined and player_session %}
                <li class="nav-dropdown">
                    <button class="nav-link nav-dropdown-toggle{% if active_page is defined and active_page == 'profile' %} active{% endif %}" aria-expanded="false">Account</button>
                    <ul class="nav-dropdown-menu">
                        <li><a href="/profile" class="nav-link{% if active_page is defined and active_page == 'profile' %} active{% endif %}">Profile</a></li>
                        <li><a href="/logout" class="nav-link">Logout</a></li>
                    </ul>
                </li>
            {% else %}
                <li><a href="/login" class="nav-link{% if active_page is defined and active_page == 'login' %} active{% endif %}">Login</a></li>
            {% endif %}
        </ul>
    </div>
</nav>
