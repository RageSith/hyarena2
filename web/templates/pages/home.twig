{% extends "base.twig" %}

{% block title %}{{ site_name }} - Hytale PvP Server | Pure Arena Action{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "VideoGame",
    "name": "HyArena",
    "description": "Hytale PvP server for pure arena action. Last Man Standing, Deathmatch, First-to-X-Kills and more.",
    "url": "{{ site_url }}",
    "image": "{{ site_url }}/assets/images/og-image.png",
    "genre": ["PvP", "Arena", "Action"],
    "gamePlatform": "Hytale",
    "applicationCategory": "Game Server",
    "operatingSystem": "Hytale Client",
    "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "EUR",
        "availability": "https://schema.org/InStock"
    },
    "provider": {
        "@type": "Organization",
        "name": "HyArena Team",
        "url": "{{ site_url }}"
    },
    "areaServed": {
        "@type": "Place",
        "name": "Europe"
    }
}
</script>
{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero" id="hero">
    <div class="hero-bg"></div>
    <div class="hero-content">
        <h1 class="hero-title">
            <span class="title-line">No Grind.</span>
            <span class="title-line accent">Just Arena.</span>
        </h1>
        <p class="hero-subtitle">
            Pure PvP action on Hytale. No survival. No farming. No building.<br>
            Just you, your skill, and the fight.
        </p>
        <div class="hero-actions">
            <a href="#join" class="btn btn-primary">Join the Fight</a>
            <a href="#modes" class="btn btn-secondary">Explore Modes</a>
        </div>
        <div class="server-status" id="server-status">
            <div class="status-indicator">
                <span class="status-dot" id="status-dot"></span>
                <span class="status-text" id="status-text">Checking server...</span>
            </div>
            <div class="player-count" id="player-count"></div>
        </div>
        <a href="#partner" class="btn btn-partner-hero">
            Prefer Survival? Visit <strong>HyHero.net</strong>
        </a>
    </div>
    <div class="hero-scroll">
        <a href="#modes" class="scroll-indicator">
            <span>Discover</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M7 13l5 5 5-5M7 6l5 5 5-5"/>
            </svg>
        </a>
    </div>
</section>

<!-- Live Stats Section -->
<section class="section live-stats" id="live-stats">
    <div class="container">
        <div class="stats-counter">
            <div class="stat-item">
                <span class="stat-number" id="stat-matches">0</span>
                <span class="stat-label">Matches</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" id="stat-players">0</span>
                <span class="stat-label">Players</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" id="stat-kills">0</span>
                <span class="stat-label">Kills</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" id="stat-today">0</span>
                <span class="stat-label">Matches Today</span>
            </div>
        </div>

        <div class="live-grid">
            <!-- Leaderboard -->
            <div class="live-card leaderboard-card">
                <div class="live-card-header">
                    <h3>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 15l-2 5-1-2-2 1 1.5-4.5M12 15l2 5 1-2 2 1-1.5-4.5M12 15V8M8 8h8"/>
                            <circle cx="12" cy="5" r="3"/>
                        </svg>
                        Top Fighters
                    </h3>
                    <span class="live-badge">Live</span>
                </div>
                <div class="leaderboard-list" id="leaderboard-list">
                    <div class="leaderboard-loading">Loading...</div>
                </div>
                <a href="/leaderboard" class="live-card-link">
                    Full Leaderboard
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <!-- Recent Battles -->
            <div class="live-card battles-card">
                <div class="live-card-header">
                    <h3>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14.5 4l-5 5 5 5M9.5 20l5-5-5-5"/>
                        </svg>
                        Recent Battles
                    </h3>
                    <span class="live-badge">Live</span>
                </div>
                <div class="battles-list" id="battles-list">
                    <div class="battles-loading">Loading...</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Arenas Section -->
<section class="section arenas" id="arenas">
    <div class="container">
        <h2 class="section-title">Choose Your Battle</h2>
        <p class="section-subtitle">All available arenas with their rules at a glance.</p>

        <div class="arenas-table-wrapper">
            <table class="arenas-table" id="arenas-table">
                <thead>
                    <tr>
                        <th>Arena</th>
                        <th>Players</th>
                        <th>Match Length</th>
                        <th>Mode</th>
                        <th>Respawn</th>
                        <th>Spawns</th>
                        <th>Size</th>
                    </tr>
                </thead>
                <tbody id="arenas-tbody">
                    <tr class="arenas-loading">
                        <td colspan="7">Loading arenas...</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="arenas-info">
            <h4>Flexible Arena System</h4>
            <p>Every mode is fully configurable: player count, respawn rules, time limits, kill targets. That means we can offer anything from intense <strong>1v1 duels</strong> to chaotic <strong>free-for-all</strong> battles and everything in between.</p>
        </div>
    </div>
</section>

<!-- Kits Section -->
<section class="section kits" id="kits">
    <div class="container">
        <h2 class="section-title">Choose Your Role</h2>
        <p class="section-subtitle">Themed kits for different playstyles. Master your favorite kit or adapt to the arena.</p>

        <div class="kits-grid">
            <article class="kit-card">
                <div class="kit-icon warrior">
                    <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M32 8v40M24 16h16M20 48h24M28 48v8M36 48v8"/>
                    </svg>
                </div>
                <h3 class="kit-title">Warrior</h3>
                <p class="kit-desc">Heavy armor, devastating melee. Go in and don't back down.</p>
            </article>

            <article class="kit-card">
                <div class="kit-icon archer">
                    <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M16 48L48 16M16 48c-4-4-4-12 0-16M16 48c4 4 12 4 16 0M44 20l4-4M40 24l4-4"/>
                    </svg>
                </div>
                <h3 class="kit-title">Archer</h3>
                <p class="kit-desc">Precision from a distance. Control the battlefield and punish mistakes.</p>
            </article>

            <article class="kit-card">
                <div class="kit-icon rogue">
                    <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M20 44L44 20M32 8c0 8-8 16-16 16M32 56c0-8 8-16 16-16"/>
                    </svg>
                </div>
                <h3 class="kit-title">Rogue</h3>
                <p class="kit-desc">Speed and cunning. Strike fast, vanish faster. Outsmart your opponents.</p>
            </article>

            <article class="kit-card kit-more">
                <div class="kit-icon more">
                    <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2.5">
                        <circle cx="20" cy="32" r="4"/>
                        <circle cx="32" cy="32" r="4"/>
                        <circle cx="44" cy="32" r="4"/>
                    </svg>
                </div>
                <h3 class="kit-title">More Coming</h3>
                <p class="kit-desc">Arena-specific kits and creative roles. The roster is growing steadily.</p>
            </article>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="section features" id="features">
    <div class="container">
        <h2 class="section-title">Built Different</h2>
        <p class="section-subtitle">A dedicated mod. Zero client hassle. Everything just works.</p>

        <div class="philosophy-box">
            <div class="philosophy-icon">
                <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="12" y="20" width="40" height="32" rx="4"/>
                    <path d="M24 20V14a8 8 0 1116 0v6"/>
                    <circle cx="32" cy="36" r="4"/>
                    <path d="M32 40v6"/>
                </svg>
            </div>
            <div class="philosophy-content">
                <h3>No Mod Hell</h3>
                <p>We don't stack dozens of unstable mods. Our entire server runs on <strong>one custom-built mod</strong>, dedicated to our vision. Connect with the vanilla Hytale client &ndash; no downloads, no compatibility issues, no crashes. Just smooth PvP.</p>
            </div>
        </div>

        <div class="features-grid">
            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M24 6v36M6 24h36"/>
                        <circle cx="24" cy="24" r="18"/>
                    </svg>
                </div>
                <h3>Matchmaking & Queue</h3>
                <p>Jump in the queue, get matched, fight. No waiting for manual team setups.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M8 36l8-8 8 8 8-16 8 8"/>
                        <path d="M8 12h32v28H8z"/>
                    </svg>
                </div>
                <h3>Leaderboards</h3>
                <p>Every arena has rankings. Climb the ladder and show everyone who's number one.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="24" cy="16" r="8"/>
                        <path d="M12 40c0-8 5.4-12 12-12s12 4 12 12"/>
                    </svg>
                </div>
                <h3>Player Statistics</h3>
                <p>Track your wins, losses, KDA and more. Know exactly where you stand.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M24 8l4 8h8l-6 6 2 10-8-5-8 5 2-10-6-6h8z"/>
                    </svg>
                </div>
                <h3>Rank Progression</h3>
                <p>Earn ranks as you play and prove yourself. Show your dedication.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="8" y="8" width="32" height="32" rx="4"/>
                        <path d="M16 20h16M16 28h10"/>
                    </svg>
                </div>
                <h3>Modern GUI</h3>
                <p>Clean, responsive interface. Navigate modes, stats, and settings with ease.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="24" cy="24" r="16"/>
                        <path d="M24 8a16 16 0 000 32"/>
                        <circle cx="24" cy="24" r="4"/>
                    </svg>
                </div>
                <h3>Hub Area</h3>
                <p>Socialize, chill, check stats. Not everything has to be combat.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10 38V20l14-10 14 10v18"/>
                        <rect x="18" y="26" width="12" height="12"/>
                    </svg>
                </div>
                <h3>Protected Arenas</h3>
                <p>Block protection and barriers keep the fight fair and players where they belong.</p>
            </article>

            <article class="feature-card">
                <div class="feature-icon">
                    <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="6" y="14" width="36" height="24" rx="2"/>
                        <path d="M12 20h8M12 26h6M12 32h10"/>
                        <circle cx="34" cy="26" r="6"/>
                        <path d="M34 22v8M30 26h8"/>
                    </svg>
                </div>
                <h3>Powerful Hardware</h3>
                <p>Ryzen 9 (5.7GHz), 64GB RAM, NVMe storage. Hosted in Germany for low EU ping.</p>
            </article>
        </div>
    </div>
</section>

<!-- Join Section -->
<section class="section join" id="join">
    <div class="container">
        <h2 class="section-title">Ready to Fight?</h2>
        <p class="section-subtitle">Three steps. That's it.</p>

        <div class="join-steps">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Launch Hytale</h3>
                <p>Open the standard Hytale client. No mods required.</p>
            </div>
            <div class="step-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <h3>Add Server</h3>
                <p>Go to Server &rarr; Add and enter the address below.</p>
            </div>
            <div class="step-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <h3>Join & Queue</h3>
                <p>Connect, choose a mode, enter the queue. Fight!</p>
            </div>
        </div>

        <div class="server-address-box">
            <span class="address-label">Server Address</span>
            <div class="address-copy">
                <code class="address" id="server-address">play.hyarena.de</code>
                <button class="copy-btn" id="copy-btn" aria-label="Copy server address">
                    <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2"/>
                        <path d="M5 15V5a2 2 0 012-2h10"/>
                    </svg>
                    <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 6L9 17l-5-5"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Community Section -->
<section class="section community" id="community">
    <div class="container">
        <div class="community-content">
            <h2 class="section-title">Join the Community</h2>
            <p class="section-subtitle">Find teammates, share clips, trash talk, stay up to date. Everything happens on our Discord.</p>

            <a href="https://discord.gg/BTUBnHhHxA" target="_blank" rel="noopener" class="btn btn-discord">
                <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028 14.09 14.09 0 001.226-1.994.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.947 2.418-2.157 2.418z"/>
                </svg>
                Join Discord
            </a>
        </div>
    </div>
</section>

<!-- Partner Section -->
<section class="partner-section" id="partner">
    <div class="partner-bg"></div>
    <div class="container">
        <div class="partner-content">
            <span class="partner-label">Partner Server</span>
            <h2 class="partner-title">HyHero.net</h2>
            <p class="partner-tagline">Survival & Citybuild Adventure</p>
            <p class="partner-text">
                Had enough PvP for today? Then relax on our partner server &ndash;
                <strong>HyHero.net</strong> combines epic survival with creative citybuild.
                Build your empire, survive in the wilderness and become a legend!
            </p>
            <div class="partner-actions">
                <a href="https://hyhero.net" target="_blank" rel="noopener" class="btn btn-partner">
                    Visit Server
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M7 17L17 7M17 7H7M17 7v10"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script src="/assets/js/main.js"></script>
{% endblock %}
