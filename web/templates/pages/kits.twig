{% extends "base.twig" %}

{% block title %}{{ site_name }} - Kits{% endblock %}

{% block content %}
<!-- Page Header -->
<section class="page-hero">
    <div class="container">
        <h1 class="page-hero-title">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14.5 4l-5 5 5 5M9.5 20l5-5-5-5"/>
            </svg>
            Kits
        </h1>
        <p class="page-hero-subtitle">Every kit brings its own identity to the arena &mdash; from aggressive rushdown to calculated range play. We're regularly adding new kits to keep the meta fresh and give you more ways to express your playstyle.</p>
    </div>
</section>

<!-- Kits Overview -->
<section class="section kits-overview">
    <div class="container">
        <div id="kits-loading" class="kits-loading">
            <div class="spinner"></div>
            <p>Loading kit data...</p>
        </div>

        <div id="kits-content" style="display: none;">
            <h2 class="section-title">Kit Usage</h2>
            <p class="section-subtitle">Server-wide statistics across all players and matches.</p>
            <div id="kits-stats-container"></div>

            <h2 class="section-title" style="margin-top: var(--space-4xl);">Available Kits</h2>
            <p class="section-subtitle">Choose a kit that matches your playstyle and dominate the arena.</p>
            <div id="kits-grid-container"></div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script src="/assets/js/main.js"></script>
<script src="/assets/js/kits.js"></script>
{% endblock %}
