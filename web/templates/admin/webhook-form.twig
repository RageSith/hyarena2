{% extends "admin/layout.twig" %}

{% block title %}{{ webhook ? 'Edit' : 'Add' }} Webhook{% endblock %}

{% block content %}
<div class="admin-page">
    <h1>{{ webhook ? 'Edit' : 'Add' }} Webhook</h1>

    <form method="POST" class="admin-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{ webhook.name ?? '' }}" required>
        </div>

        <div class="form-group">
            <label for="url">Webhook URL</label>
            <input type="url" id="url" name="url" value="{{ webhook.url ?? '' }}" placeholder="https://discord.com/api/webhooks/..." required>
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" name="is_active" {{ (webhook.is_active ?? true) ? 'checked' : '' }}>
                Active
            </label>
        </div>

        <div class="form-group">
            <label>Event Subscriptions</label>
            <div class="checkbox-group">
                {% set events = ['match_end', 'player_milestone', 'notification'] %}
                {% for event in events %}
                <label class="checkbox-label">
                    <input type="checkbox" name="subscriptions[]" value="{{ event }}"
                        {{ webhook.subscriptions is defined and event in webhook.subscriptions ? 'checked' : '' }}>
                    {{ event }}
                </label>
                {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ webhook ? 'Update' : 'Create' }}</button>
            <a href="/admin/webhooks" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
{% endblock %}
