{% extends "admin/layout.twig" %}

{% block title %}Players{% endblock %}

{% block content %}
<div class="admin-page">
    <div class="admin-page-header">
        <h1>Players{% if total %} <span class="text-muted">({{ total }})</span>{% endif %}</h1>
    </div>

    <form method="GET" action="/admin/players" class="search-bar">
        <input type="text" name="q" value="{{ query }}" placeholder="Search by username or UUID...">
        <button type="submit" class="btn btn-primary">Search</button>
        {% if query %}
            <a href="/admin/players" class="btn btn-secondary">Clear</a>
        {% endif %}
    </form>

    <div class="admin-table-wrapper">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>UUID</th>
                    <th>Last Seen</th>
                    <th>AP</th>
                    <th>Honor</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for player in players %}
                <tr>
                    <td>{{ player.username }}</td>
                    <td class="text-muted">{{ player.uuid[:8] }}...</td>
                    <td>{{ player.last_seen|date('M j, Y') }}</td>
                    <td>{{ player.arena_points }}</td>
                    <td>{{ player.honor }} <span class="text-muted">({{ player.honor_rank }})</span></td>
                    <td>
                        {% if player.is_banned %}
                            <span class="badge badge-banned">Banned</span>
                        {% else %}
                            <span class="badge badge-active">Active</span>
                        {% endif %}
                    </td>
                    <td class="actions">
                        <a href="/admin/players/{{ player.uuid }}" class="btn btn-sm btn-secondary">View</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="empty">No players found.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if total_pages > 1 %}
    <div class="pagination">
        {% if page > 1 %}
            <a href="/admin/players?{% if query %}q={{ query|url_encode }}&{% endif %}page={{ page - 1 }}" class="btn btn-sm btn-secondary">&laquo; Prev</a>
        {% endif %}
        <span class="pagination-info">Page {{ page }} of {{ total_pages }}</span>
        {% if page < total_pages %}
            <a href="/admin/players?{% if query %}q={{ query|url_encode }}&{% endif %}page={{ page + 1 }}" class="btn btn-sm btn-secondary">Next &raquo;</a>
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}
