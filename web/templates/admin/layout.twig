<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %} - {{ site_name }}</title>
    <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
    <div class="admin-layout">
        <nav class="admin-sidebar">
            <div class="admin-brand">
                <a href="/admin">{{ site_name }} Admin</a>
            </div>
            <ul class="admin-nav">
                <li><a href="/admin" class="{% if active_page is defined and active_page == 'dashboard' %}active{% endif %}">Dashboard</a></li>
                <li><a href="/admin/bug-reports" class="{% if active_page is defined and active_page == 'bug_reports' %}active{% endif %}">Bug Reports{% if open_bug_count is defined and open_bug_count > 0 %} <span class="nav-badge">{{ open_bug_count }}</span>{% endif %}</a></li>
                <li><a href="/admin/players" class="{% if active_page is defined and active_page == 'players' %}active{% endif %}">Players</a></li>
                {% if admin.role in ['super_admin', 'admin'] %}
                <li><a href="/admin/notifications" class="{% if active_page is defined and active_page == 'notifications' %}active{% endif %}">Notifications</a></li>
                <li><a href="/admin/seasons" class="{% if active_page is defined and active_page == 'seasons' %}active{% endif %}">Seasons</a></li>
                <li><a href="/admin/servers" class="{% if active_page is defined and active_page == 'servers' %}active{% endif %}">Servers</a></li>
                <li><a href="/admin/arenas" class="{% if active_page is defined and active_page == 'arenas' %}active{% endif %}">Arenas</a></li>
                <li><a href="/admin/team" class="{% if active_page is defined and active_page == 'team' %}active{% endif %}">Team</a></li>
                {% endif %}
                {% if admin.role == 'super_admin' %}
                <li><a href="/admin/webhooks" class="{% if active_page is defined and active_page == 'webhooks' %}active{% endif %}">Webhooks</a></li>
                <li><a href="/admin/users" class="{% if active_page is defined and active_page == 'admin_users' %}active{% endif %}">Admin Users</a></li>
                <li><a href="/admin/data-management" class="{% if active_page is defined and active_page == 'data_management' %}active{% endif %}">Data Management</a></li>
                {% endif %}
            </ul>
            <div class="admin-user">
                <span>{{ admin.username }} <span class="badge badge-role-{{ admin.role }}">{{ admin.role|replace({'_': ' '}) }}</span></span>
                <a href="/admin/logout">Logout</a>
            </div>
        </nav>
        <main class="admin-content">
            {% block content %}{% endblock %}
        </main>
    </div>
</body>
</html>
