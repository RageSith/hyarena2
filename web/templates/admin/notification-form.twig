{% extends "admin/layout.twig" %}

{% block title %}{{ notification ? 'Edit' : 'Create' }} Notification{% endblock %}

{% block content %}
<div class="admin-page">
    <h1>{{ notification ? 'Edit' : 'Create' }} Notification</h1>

    <form method="POST" class="admin-form" enctype="multipart/form-data">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="{{ notification.title ?? '' }}" required>
        </div>

        <div class="form-group">
            <label for="message">Message <span style="font-weight: normal; color: var(--admin-text-muted); font-size: 0.8em;">(Markdown supported)</span></label>
            <textarea id="message" name="message" rows="10" required>{{ notification.message ?? '' }}</textarea>
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/jpeg,image/png,image/gif,image/webp">
            {% if notification and notification.image_path %}
                <div style="margin-top: 0.75rem;">
                    <img src="/uploads/news/{{ notification.image_path }}" alt="Current image" style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px; border: 1px solid var(--admin-border);">
                    <label style="display: block; margin-top: 0.5rem;">
                        <input type="checkbox" name="remove_image" value="1">
                        Remove current image
                    </label>
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="type">Type</label>
            <select id="type" name="type">
                <option value="info" {{ notification.type == 'info' ? 'selected' : '' }}>Info</option>
                <option value="warning" {{ notification.type == 'warning' ? 'selected' : '' }}>Warning</option>
                <option value="maintenance" {{ notification.type == 'maintenance' ? 'selected' : '' }}>Maintenance</option>
                <option value="update" {{ notification.type == 'update' ? 'selected' : '' }}>Update</option>
            </select>
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" name="is_active" {{ (notification.is_active ?? true) ? 'checked' : '' }}>
                Active
            </label>
            <label style="margin-left: 1.5rem;">
                <input type="checkbox" name="is_pinned" {{ (notification.is_pinned is defined and notification.is_pinned) ? 'checked' : '' }}>
                Pinned
            </label>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="starts_at">Starts At (optional)</label>
                <input type="datetime-local" id="starts_at" name="starts_at" value="{{ notification.starts_at ?? '' }}">
            </div>
            <div class="form-group">
                <label for="ends_at">Ends At (optional)</label>
                <input type="datetime-local" id="ends_at" name="ends_at" value="{{ notification.ends_at ?? '' }}">
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ notification ? 'Update' : 'Create' }}</button>
            <a href="/admin/notifications" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
{% endblock %}
