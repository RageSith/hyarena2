$C = "../Common.ui";

Group #HubSettingsPage {
    $C.@PageOverlay {}

    $C.@DecoratedContainer {
        @CloseButton = true;
        Anchor: (Width: 520, Height: 440);

        Group #Title {
            $C.@Title #TitleLabel {
                @Text = "Hub Settings";
                Anchor: (Top: 12, Height: 24);
            }
        }

        Group #Content {
            Padding: (Full: 20);
            Anchor: (Top: 40, Bottom: 70);

            Group #FormScroll {
                LayoutMode: TopScrolling;
                ScrollbarStyle: $C.@DefaultScrollbarStyle;

                // World Name
                Label {
                    Text: "WORLD";
                    Anchor: (Height: 20);
                    Style: (FontSize: 11, TextColor: #e8c872, RenderBold: true, RenderUppercase: true);
                }

                Group {
                    Anchor: (Height: 32, Top: 4);
                    LayoutMode: Left;
                    Label { Text: "World Name"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #WorldNameField { FlexWeight: 1; PlaceholderText: "default"; }
                }

                // Spawn Point
                $C.@ContentSeparator { @Anchor = (Top: 10); }

                Label {
                    Text: "SPAWN POINT";
                    Anchor: (Height: 20, Top: 8);
                    Style: (FontSize: 11, TextColor: #e8c872, RenderBold: true, RenderUppercase: true);
                }

                Group {
                    Anchor: (Height: 32, Top: 4);
                    LayoutMode: Left;
                    Label { Text: "X"; Anchor: (Width: 30); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #SpawnXField { @Anchor = (Width: 80); PlaceholderText: "0"; }
                    Label { Text: "Y"; Anchor: (Width: 30, Left: 8); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #SpawnYField { @Anchor = (Width: 80); PlaceholderText: "0"; }
                    Label { Text: "Z"; Anchor: (Width: 30, Left: 8); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #SpawnZField { @Anchor = (Width: 80); PlaceholderText: "0"; }
                    Group { FlexWeight: 1; }
                }

                Group {
                    Anchor: (Height: 32, Top: 4);
                    LayoutMode: Left;
                    Label { Text: "Yaw"; Anchor: (Width: 50); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #SpawnYawField { @Anchor = (Width: 80); PlaceholderText: "0"; }
                    Label { Text: "Pitch"; Anchor: (Width: 50, Left: 8); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #SpawnPitchField { @Anchor = (Width: 80); PlaceholderText: "0"; }
                    Group { FlexWeight: 1; }
                }

                $C.@SecondaryTextButton #SetSpawnBtn {
                    @Text = "Set to Current Position";
                    @Anchor = (Height: 32, Top: 8, Width: 200);
                }

                // Bounds
                $C.@ContentSeparator { @Anchor = (Top: 10); }

                Label {
                    Text: "BOUNDS";
                    Anchor: (Height: 20, Top: 8);
                    Style: (FontSize: 11, TextColor: #e8c872, RenderBold: true, RenderUppercase: true);
                }

                // Min bounds
                Group {
                    Anchor: (Height: 32, Top: 4);
                    LayoutMode: Left;
                    Label { Text: "Min"; Anchor: (Width: 40); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #BoundsMinXField { @Anchor = (Width: 80); PlaceholderText: "X"; }
                    $C.@TextField #BoundsMinYField { @Anchor = (Width: 80, Left: 4); PlaceholderText: "Y"; }
                    $C.@TextField #BoundsMinZField { @Anchor = (Width: 80, Left: 4); PlaceholderText: "Z"; }
                    $C.@SecondaryTextButton #SetMinBtn { @Text = "Set Min"; @Anchor = (Width: 70, Left: 8); }
                    Group { FlexWeight: 1; }
                }

                // Max bounds
                Group {
                    Anchor: (Height: 32, Top: 4);
                    LayoutMode: Left;
                    Label { Text: "Max"; Anchor: (Width: 40); Style: (FontSize: 13, TextColor: #6b7d8e, VerticalAlignment: Center); }
                    $C.@TextField #BoundsMaxXField { @Anchor = (Width: 80); PlaceholderText: "X"; }
                    $C.@TextField #BoundsMaxYField { @Anchor = (Width: 80, Left: 4); PlaceholderText: "Y"; }
                    $C.@TextField #BoundsMaxZField { @Anchor = (Width: 80, Left: 4); PlaceholderText: "Z"; }
                    $C.@SecondaryTextButton #SetMaxBtn { @Text = "Set Max"; @Anchor = (Width: 70, Left: 8); }
                    Group { FlexWeight: 1; }
                }

                // Status Message
                Label #StatusMessage {
                    Text: "";
                    Anchor: (Height: 20, Top: 16);
                    Visible: false;
                    Style: (FontSize: 12, TextColor: #2ecc71, Alignment: Center);
                }

                Group { Anchor: (Height: 20); }
            }
        }

        // Bottom Button Row
        Group #ButtonRow {
            Anchor: (Bottom: 16, Height: 44, Left: 20, Right: 20);
            LayoutMode: Left;

            $C.@SecondaryTextButton #CancelBtn {
                @Text = "Back";
                @Anchor = (Width: 120);
            }

            Group { FlexWeight: 1; }

            $C.@TextButton #SaveBtn {
                @Text = "Save";
                @Anchor = (Width: 160);
            }
        }
    }
}
